<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{store.getName}}</title>
    </head>
    <body>
        <h1>{{store.getName}}</h1>

        {% if brands_carried is not empty %}
            <ul>
                {% for brand in brands_carried %}
                    <li>{{brand.getName}}</li>
                {% endfor %}
            </ul>
        {% else %}
        <p>Looks like this store doesn't carry any brands yet.</p>
        {% endif %}
        <p>Add a brand</p>
            <form action="/store/{{ store.getId }}" method="post">
                <select name="brand_name">
                    {% for brand in brands_all %}
                        <option value= {{ brand.getId }}> {{ brand.getName }}</option>
                    {% endfor %}
                </select>
                <button type="submit" name="button">Add this brand</button>
            </form>
        <a href="/stores"><button type="button" name="button">Stores Page</button></a>
        <a href="/"><button type="button" name="button">Home Page</button></a>
        <form action="/store/delete/{{store.getId}}" method="post">
            <input type='hidden' name='_method' value='delete' />
            <button type="submit" name="button">Delete this store</button>
        </form>
        <form action="/store/update/{{store.getId}}" method="post">
            <input type='hidden' name='_method' value='patch' />
            <input type="text" name="new_store_name" value="">
            <button type="submit" name="button">Change this store's name</button>
        </form>
    </body>
</html>
